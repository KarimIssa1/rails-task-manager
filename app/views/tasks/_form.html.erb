<%= form_with(model: task, local: true) do |form| %>
  <div class="mb-3">
    <%= form.label :title %>
    <%= form.text_field :title, class: 'form-control' %>
  </div>

  <div class="mb-3">
    <%= form.label :details %>
    <%= form.text_area :details, class: 'form-control' %>
  </div>

  <% if task.persisted? %>
    <div class="mb-3">
      <%= form.label :completed %>
      <%= form.check_box :completed %>
    </div>
  <% end %>

  <%= form.submit task.new_record? ? 'Create Task' : 'Update Task', class: 'btn btn-primary' %>
<% end %>
