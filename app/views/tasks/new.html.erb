<h1>Add a New Task</h1>

<%= form_with model: @task, local: true do |form| %>
  <div>
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>
  <div>
    <%= form.label :details %>
    <%= form.text_area :details %>
  </div>
  <%= form.submit "Create Task", class: 'btn btn-success' %>
<% end %>

<%= link_to 'Back to My Tasks', tasks_path, class: 'btn btn-secondary' %>
